<% provide(:title, fullname(@user)) %>

<div class="row">
	<%-# User Profile Picture -%>
	<aside class="span2">
		<%= image_tag @user.avatar_url.to_s, :id => 'avatar' %>
	</aside>
	<%-# User contact Information-%>
	<aside class="span6">
		<section id="user_info">
			<p>
			<h1>
				<%= fullname(@user) %>
			</h1>
		    </p>

			<h4>
				Email: <%= @user.email %>
			</h4>

			<p>
			<h4>
				Cell Phone: <%= @user.cellphone %>
			</h4>
		    </p>
		    <p>
		    <h4>
				<%= link_to "Update Profile", edit_user_path %>
			</h4>
		    </p>

		</section>
	</aside>
</div>